    <script>
        const frmm = document.getElementById('update');
        frmm.addEventListener('submit', async(e) => {
            e.preventDefault()
            const data = await fetch('http://localhost:3002/product/update/<%= show.id%>', {
                method: 'put',
                body: JSON.stringify({
                    cat_id: frmm.cat_id.value,
                    name: frmm.name.value,
                    featured: frmm.featured.value,
                    desc: frmm.desc.value,
                    price: frmm.price.value
                }),
                headers: {
                    'Content-Type': 'application/json'

                }
            })
            const rec = await data.json();
            console.log(rec)
            if (rec) {
                Swal.fire({

                    icon: 'success',
                    title: 'Product Has been Updated',
                    showConfirmButton: false,
                    timer: 1500
                })
                location.assign('/admin/all-product')

            } else {
                Swal.fire({
                    icon: 'error',
                    title: 'Oops...',
                    text: 'Something went wrong!',

                })
            }

        })
    </script>

